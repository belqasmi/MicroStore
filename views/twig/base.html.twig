 <script>     
$(document).ready(function() {

	$('#register_login_btn').click(function(e) {
		$("#login-form").delay(425).fadeIn(400);
		$("#register-form").fadeOut(400);
		$('#register-form-link').removeClass('active');
		$(this).addClass('active');
		e.preventDefault();
	});
	$('#login_register_btn').click(function(e) {
		$("#register-form").delay(425).fadeIn(400);
		$("#login-form").fadeOut(400);
		$('#login-form-link').removeClass('active');
		$(this).addClass('active');
		e.preventDefault();
	});

});   
	</script>